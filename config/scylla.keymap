            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            bindings =
                <&kp>,
                <&kp>;

            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <250>;
        };
    };

    combos {
        compatible = "zmk,combos";

        big_pinky_left {
            bindings = <&mo 5>;
            key-positions = <37 25>;
        };

        big_pinky_right {
            bindings = <&mo 5>;
            key-positions = <46 34>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        // TODO: Add Switch to NAV-layer on this half

